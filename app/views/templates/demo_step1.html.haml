      .row.rel.postcode
        %label(for='agent-postcode')> Postcode
        %input.smalltext(type='text' name='agent-postcode' id='agent-postcode')>
      .row
        %label(for='agent-title')> Title
        %input.smalltext(type='text' name='agent-title' id='agent-title')
      .row.rel
        %label(for='agent-name')> Full name
        %input(type='text' name='agent-name' id='agent-name')
      .row.rel
        %label(for='agent-phone')> Phone
        %input(type='text' name='agent-phone' id='agent-phone')
      .row.rel
        %label(for='agent-mobile')> Mobile
        %input(type='text' name='agent-mobile' id='agent-mobile')
      .row.rel
        %label(for='agent-email')> Email
        %input(type='text' name='agent-email' id='agent-email')
      .row
        %label(for='agent-dxnumber')> DX number
