.container
  %nav.progress
    %ol
      %li.active
        %span Personal details
      %li
        %span Case details
      %li
        %span Confirm details
      %li
        %span Pay court fee
      %li
        %span Confirmation

%header.content-header
  %h2 Step 1 - Personal details
  %p Fill in the address of the property you want to repossess and contact details for the landlords and tenants.

%section.property-details
  %h3.section-header Property details
  .moj-panel.sub-panel
    %form
      .row.rel.street
        %label(for='agent-address')> Street
        %textarea(name='agent-address' id='agent-address')
      .row.rel.town
        %label(for='agent-town')> Town
        %input(type='text' name='agent-town' id='agent-town')
      .row.rel.postcode
        %label(for='agent-postcode')> Postcode
        %input.smalltext(type='text' name='agent-postcode' id='agent-postcode')>
      %fieldset.striped-choice
        %legend Type of property
        .options
          .row
            %input#property-residential(type='checkbox')
            %label(for='property-residential') Residential
          .row
            %input#property-commercial(type='checkbox')
            %label(for='property-commercial') Commercial
      %fieldset.striped-choice
        %legend Who is in the property?
        .options
          .row
            %input#property-who-tenants(type='radio' name='property-who')
            %label(for='property-who-tenants') Tenants
          .row
            %input#property-who-squatters(type='radio' name='property-who')
            %label(for='property-who-squatters') Squatters
      .row
        %label(for='title-number') Title number
        %input.smalltext#title-number(type='text' name='title-number')
      .row.rel.help-link
        %a(href='#') About title numbers

%section.landlord-details
  %h3.section-header Landlord details
  .moj-panel
    %form
      .row
        %label(for='landlord-companyname')> Company name
        %input(type='text' name='landlord-companyname' id='landlord-companyname')
      .row.rel.street
        %label(for='landlord-address')> Street
        %textarea(name='landlord-address' id='landlord-address')
      .row.rel.town
        %label(for='landlord-town')> Town
        %input(type='text' name='landlord-town' id='landlord-town')
      .row.rel.postcode
        %label(for='landlord-postcode')> Postcode
        %input.smalltext(type='text' name='landlord-postcode' id='landlord-postcode')>
      .row
        %label(for='landlord-title')> Title
        %input.smalltext(type='text' name='landlord-title' id='landlord-title')
      .row.rel
        %label(for='landlord-name')> Full name
        %input(type='text' name='landlord-name' id='landlord-name')
      .row.rel
        %label(for='landlord-phone')> Phone
        %input(type='text' name='landlord-phone' id='landlord-phone')
      .row.rel
        %label(for='landlord-mobile')> Mobile
        %input(type='text' name='landlord-mobile' id='landlord-mobile')
      .row.rel
        %label(for='landlord-email')> Email
        %input(type='text' name='landlord-email' id='landlord-email')
      .row
        %label(for='landlord-dxnumber')> DX number
        %input(type='text' name='landlord-dxnumber' id='landlord-dxnumber')
      .row.rel
        %label(for='landlord-dxexchange')> DX exchange
        %input(type='text' name='landlord-dxexchange' id='landlord-dxexchange')

