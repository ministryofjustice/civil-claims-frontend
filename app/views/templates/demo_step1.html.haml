%section.tenant-details
  %h3.section-header Tenant details
  .moj-panel
    %form
      .row
        %label(for='tenants-numtenants') Number of tenants
        %select.small#numtenants(name='tenants-numtenants')
          %option(value='1') 1
          %option(value='2') 2
          %option(value='3') 3
          %option(value='4') 4
          %option(value='5') 5
          %option(value='6') 6
          %option(value='7') 7
          %option(value='8') 8
          %option(value='9') 9
          %option(value='10') 10
          / a button will go here to update the number of tenants, but I understand we're not doing that right now.
          / dropdown left in so we don't forget about it
      .row.divider
      .sub-panel.tenants-wrapper
        .tenant#tenant1
          .row
            %label(for='tenant1-title')> Title
            %input.smalltext(type='text' name='tenant1-title' id='tenant1-title')
          .row.rel
            %label(for='tenant1-name')> Full name
            %input(type='text' name='tenant1-name' id='tenant1-name')
          .row.rel
            %label(for='tenant1-phone')> Phone
            %input(type='text' name='tenant1-phone' id='tenant1-phone')
          .row.rel
            %label(for='tenant1-mobile')> Mobile
            %input(type='text' name='tenant1-mobile' id='tenant1-mobile')
          .row.rel
            %label(for='tenant1-email')> Email
            %input(type='text' name='tenant1-email' id='tenant1-email')
          .row.full
            If the tenant's current address is different from the property you want to repossess, please provide their address below.
          .row.rel.street
            %label(for='tenant1-address')> Street
            %textarea(name='tenant1-address' id='tenant1-address')
          .row.rel.town
            %label(for='tenant1-town')> Town
            %input(type='text' name='tenant1-town' id='tenant1-town')
          .row.rel.postcode
            %label(for='tenant1-postcode')> Postcode
            %input.smalltext(type='text' name='tenant1-postcode' id='tenant1-postcode')>




%section
  .action-buttons.cf
