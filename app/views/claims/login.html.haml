- @hide_user_nav = true

%header.page-header.group
  %h1 Sign in
  %p.lead Sign in to start court action against a tenant.

.container
  %form
    %fieldset.plain
      %label(for='fullname') Full name
      %input#fullname(type='text')
      %label(for='password') Password
      %input#password(type='password')
    .action-buttons.cf
      %input.button.primary.large.chevron.left(type='submit' value='Sign in')
